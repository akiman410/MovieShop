@model ApplicationCore.Models.MovieDetailsModel
@{
    ViewData["Title"] = "Movie Details Page";
}


  <div class="row">
            <div class="card" style="width: 10rem;">
            <img src="@Model.PosterUrl" class="card-img-top" alt="@Model.Title"></div>

         <div class="col-6" >
           <ul class="list-group">
              <li class="list-group-item"><h3 class= "fs-6">@Model.Title</h3></li>
             <li class="list-group-item"><span class="badge rounded-pill bg-secondary">@Model.</span></li>
             <li class="list-group-item">@Model.Rating</li>
             <li class="list-group-item">@Model.Overview</li>  
            </ul>
         </div>
           <div class="d-grid gap-2 col-3 mx-auto" width="50">
                 <button type="button" class="btn btn-outline-secondary">Review</button>              
                 <button class="btn btn-primary" type="button">Buy $@Model.Price</button>
        </div>

  </div>
  <div class="row">
    <div class="col-3 col-xl-3 col-sm-2 col-lg-3">
      <h4>MOVIE FACTS</h4>
       <ul class="list-group">
          <li class="list-group-item"><p>Release Date</p><span class="badge rounded-pill bg-secondary">@Model.ReleaseDate</span></li>
          <li class="list-group-item"><p>Run Time<p><span class="badge rounded-pill bg-secondary">@Model.RunTime</span></p></li>
          <li class="list-group-item"><p>Box Office<p><span class="badge rounded-pill bg-secondary">@Model.Revenue</span></p></li>
          <li class="list-group-item"><p>Budget<p><span class="badge rounded-pill bg-secondary">@Model.Budget</span></p></li>  
        </ul>
        <div>
            <h3>Trailers</h3>      

        </div>
    </div>
    <div class="col-6">
        <h5>CAST</h5>
      <ul>
             @foreach (var x in Model.Casts)
                {<li>@x.Name </li>}
        </ul>
    </div>
    <div class="col-3">  
    </div>
  </div>
