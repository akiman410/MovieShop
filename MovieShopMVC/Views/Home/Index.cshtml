@model List<ApplicationCore.Models.MovieCardModel>
@{
    ViewData["Title"] = "Home Page";
}

    <div class="rounded">
        <div class="container">
            <div class ="row">
                @foreach (var movie in Model)
                {
                    <div class= col-xl-2 col-sm-4 col-lg-3 col-6 col-md-4>
                        <div class="card mb-4">
                            <a asp-controller ="Movies" asp-action= "Details" asp-route-id = "@movie.Id">
                            <img src=@movie.PosterUrl alt="@movie.Title" class="img-fluid">
                            </a>
                        </div>
                    </div>   
                }
            </div>
        </div>
    </div>
