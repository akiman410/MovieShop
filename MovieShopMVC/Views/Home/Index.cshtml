@model List<ApplicationCore.Models.MovieCardModel>
@{
    ViewData["Title"] = "Home Page";
}

    <div class="rounded">
        <div class="container">
            <div class ="row">
                @foreach (var movie in Model)
                {
                     <div class= col-xl-2 col-sm-4 col-lg-3 col-6 col-md-4>
                    <partial name="_MovieCard" model="movie"/>
                    </div>
                }
            </div>
        </div>
    </div>
