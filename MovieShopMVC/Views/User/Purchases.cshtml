@model List<ApplicationCore.Models.PurchaseRequestModel>

@{
    ViewData["Title"] = "Purchases";
}

<h1>Purchases</h1>

<div>
    <h4>PurchaseRequestModel</h4>

        <div class="rounded">
        <div class="container-fluid">
            <div class ="row">                
                @foreach (var purchase in Model)
                {
                    <div class= "col-xl-2 col-sm-4 col-lg-3 col-6 col-md-4">"
                        <div class="card mb-4" >
                        <a asp-action="Movies" asp-controller="Details" asp-route-id="@purchase.MovieId">
                            <img src="@purchase.Movie.PosterUrl" alt="@purchase.Movie.Title" class="img-fluid"/>
                        </a>
                        </div>

                    </div>
                }            
        </div>
    </div>
</div>
</div>

